{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/z3uss3l/uin-universal-image-notation/schemas/v0.6.json",
  "title": "Universal Image Notation (UIN) v0.6",
  "description": "Präzise, messbare Bildbeschreibung für Forensik, KI-Generierung und visuelle Kompression",
  "type": "object",
  "required": ["version", "canvas"],
  "additionalProperties": false,
  "definitions": {
    "vector3": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "measurement": {
      "type": "object",
      "required": ["value", "unit"],
      "properties": {
        "value": { "type": "number", "minimum": 0 },
        "unit": { 
          "type": "string",
          "enum": ["mm", "cm", "m", "px", "%", "ratio"]
        },
        "tolerance": { "type": "number", "minimum": 0 },
        "reference": { "type": "string" }
      }
    },
    "color": {
      "oneOf": [
        { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        { "type": "string", "pattern": "^#[0-9A-Fa-f]{8}$" },
        {
          "type": "object",
          "properties": {
            "rgb": {
              "type": "array",
              "items": { "type": "number", "minimum": 0, "maximum": 255 },
              "minItems": 3,
              "maxItems": 3
            },
            "hsl": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 3,
              "maxItems": 3
            },
            "munsell": { "type": "string" },
            "name": { "type": "string" }
          }
        }
      ]
    }
  },
  "properties": {
    "version": {
      "type": "string",
      "const": "0.6",
      "description": "UIN Schema Version - MUST be '0.6'"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "title": { "type": "string", "maxLength": 200 },
        "description": { "type": "string", "maxLength": 1000 },
        "author": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "modified": { "type": "string", "format": "date-time" },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "source": {
          "type": "object",
          "properties": {
            "type": { 
              "type": "string",
              "enum": ["generated", "extracted", "manual", "forensic"]
            },
            "image_hash": { "type": "string" },
            "extraction_method": { "type": "string" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },
    "canvas": {
      "type": "object",
      "required": ["aspect_ratio", "bounds"],
      "properties": {
        "aspect_ratio": {
          "type": "string",
          "pattern": "^[0-9]+:[0-9]+$",
          "examples": ["16:9", "4:3", "1:1", "3:4"]
        },
        "bounds": {
          "type": "object",
          "required": ["x", "y", "z"],
          "properties": {
            "x": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2,
              "maxItems": 2,
              "description": "[min, max] in world units"
            },
            "y": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2,
              "maxItems": 2
            },
            "z": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "coordinate_system": {
          "type": "string",
          "enum": ["world_space_meters", "normalized_0_1", "pixel_absolute", "camera_relative"],
          "default": "world_space_meters"
        },
        "origin": {
          "type": "string",
          "enum": ["center", "bottom_center", "top_left", "bottom_left"],
          "default": "center"
        }
      }
    },
    "global": {
      "type": "object",
      "properties": {
        "lighting": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["studio", "golden_hour", "blue_hour", "overcast", "night", "indoor", "custom"]
            },
            "intensity": { "type": "number", "minimum": 0, "maximum": 1 },
            "temperature": { "type": "number", "minimum": 1000, "maximum": 10000 },
            "direction": { "$ref": "#/definitions/vector3" },
            "sources": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "position": { "$ref": "#/definitions/vector3" },
                  "color": { "$ref": "#/definitions/color" },
                  "intensity": { "type": "number" }
                }
              }
            }
          }
        },
        "atmosphere": {
          "type": "object",
          "properties": {
            "fog_density": { "type": "number", "minimum": 0, "maximum": 1 },
            "haze": { "type": "number", "minimum": 0, "maximum": 1 },
            "precipitation": {
              "type": "string",
              "enum": ["none", "rain", "snow", "fog", "mist"]
            }
          }
        },
        "style": {
          "type": "object",
          "properties": {
            "genre": {
              "type": "string",
              "enum": ["photorealistic", "painting", "sketch", "anime", "cyberpunk", "vintage"]
            },
            "color_grading": { "type": "string" },
            "grain": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },
    "edge_reference": {
      "type": "object",
      "properties": {
        "use_as_control": { "type": "boolean", "default": true },
        "file_name": { "type": "string" },
        "canny_thresholds": {
          "type": "object",
          "properties": {
            "low": { "type": "integer", "minimum": 0, "maximum": 255, "default": 100 },
            "high": { "type": "integer", "minimum": 0, "maximum": 255, "default": 200 }
          }
        },
        "source_hash": { "type": "string" },
        "transform": {
          "type": "object",
          "properties": {
            "scale": { "type": "number" },
            "rotation": { "type": "number" },
            "translation": { "type": "array", "items": { "type": "number" } }
          }
        }
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "position"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "description": "Unique identifier within scene"
          },
          "type": {
            "type": "string",
            "enum": [
              "human", "animal", "vehicle", "building", "furniture",
              "nature", "tool", "abstract", "custom"
            ]
          },
          "subtype": { "type": "string" },
          "position": {
            "type": "object",
            "required": ["x", "y", "z"],
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" },
              "z": { "type": "number" },
              "anchor": {
                "type": "string",
                "enum": ["center", "feet", "head", "top_left", "bottom_center", "origin"],
                "default": "center"
              },
              "uncertainty": { "type": "number", "minimum": 0 }
            }
          },
          "rotation": {
            "type": "object",
            "properties": {
              "x": { "type": "number", "minimum": -180, "maximum": 180 },
              "y": { "type": "number", "minimum": -180, "maximum": 180 },
              "z": { "type": "number", "minimum": -180, "maximum": 180 }
            }
          },
          "scale": {
            "type": "object",
            "properties": {
              "x": { "type": "number", "minimum": 0.01 },
              "y": { "type": "number", "minimum": 0.01 },
              "z": { "type": "number", "minimum": 0.01 },
              "uniform": { "type": "number", "minimum": 0.01 }
            }
          },
          "measurements": {
            "type": "object",
            "additionalProperties": {
              "oneOf": [
                { "$ref": "#/definitions/measurement" },
                { "type": "number" },
                { "type": "string" }
              ]
            }
          },
          "features": {
            "type": "object",
            "properties": {
              "color": { "$ref": "#/definitions/color" },
              "material": { "type": "string" },
              "texture": { "type": "string" },
              "reflectivity": { "type": "number", "minimum": 0, "maximum": 1 },
              "transparency": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          },
          "forensic_attributes": {
            "type": "object",
            "properties": {
              "face_shape": {
                "type": "string",
                "enum": ["oval", "round", "square", "heart", "diamond", "oblong"]
              },
              "interpupillary_distance_mm": {
                "type": "number",
                "minimum": 50,
                "maximum": 80
              },
              "nasal_index": { "type": "number" },
              "facial_symmetry": { "type": "number", "minimum": 0, "maximum": 1 },
              "unique_marks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string" },
                    "position": { "type": "string" },
                    "size": { "type": "string" }
                  }
                }
              }
            }
          },
          "state": {
            "type": "object",
            "properties": {
              "action": { "type": "string" },
              "expression": {
                "type": "string",
                "enum": ["neutral", "happy", "sad", "angry", "surprised"]
              },
              "condition": { "type": "string" }
            }
          },
          "metadata": {
            "type": "object",
            "properties": {
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
              "source": { "type": "string" },
              "notes": { "type": "string" }
            }
          }
        }
      },
      "minItems": 0,
      "maxItems": 100,
      "uniqueItemProperties": ["id"]
    },
    "relations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "from", "to"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["distance", "angle", "relative_position", "hierarchical", "interaction"]
          },
          "from": { "type": "string" },
          "to": { "type": "string" },
          "value": { "type": ["number", "string", "array"] },
          "unit": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "camera": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["perspective", "orthographic", "fisheye"]
        },
        "fov": { "type": "number", "minimum": 0, "maximum": 180 },
        "focal_length": { "type": "number" },
        "position": { "$ref": "#/definitions/vector3" },
        "target": { "$ref": "#/definitions/vector3" },
        "up": { "$ref": "#/definitions/vector3" }
      }
    },
    "compatibility": {
      "type": "object",
      "properties": {
        "ai_models": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["stable-diffusion", "dall-e", "midjourney", "flux"]
        },
        "controlnet_types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["canny", "depth", "normal", "pose", "segmentation", "scribble"]
          }
        }
      }
    }
  }
          }
